<!DOCTYPE html>
<html>
<head>
  <title>TabataRailsApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Codystar|Josefin+Sans' rel='stylesheet' type='text/css'>
</head>
<body>
  <div id='wrap'>
    <% if !flash.empty? %>
      <div class="flash">
        <% flash.each do |key, value| %><%= value %>
        <% end %>
      </div>
    <% end %>

    <%= render 'nav_bar' %>
    <%= yield %>
  </div>
</body>
</html>
